{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "lint": "eslint ./src/**/*.ts",
    "format": "prettier --write ./src/**/*.ts",
    "migration:create": "yarn typeorm-ts-node-commonjs migration:create",
    "migration:run": "yarn typeorm-ts-node-commonjs migration:run -- -d ./src/db/typeorm/dataSource",
    "migration:revert": "yarn typeorm-ts-node-commonjs migration:revert -- -d ./src/db/typeorm/dataSource"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.7",
    "@types/nodemon": "^1.19.6",
    "@types/pg": "^8.11.5",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "pino": "^9.2.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8"
  }
}
